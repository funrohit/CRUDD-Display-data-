@model SMS.Models.mymodel




<!DOCTYPE html>

<html>

   <head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body bgcolor="pink">

<h4>Add The Student Details-</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" id="allform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sname" class="control-label"></label>
                <input asp-for="Sname" class="form-control" required="required"/>
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roll" class="control-label"></label>
                <input asp-for="Roll" class="form-control" required="required"/>
                <span asp-validation-for="Roll" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                 <label asp-for="Class" class="control-label"></label>
                 <br>
               <select name="Class" required="required">
               <option value="1">1st</option>
               <option value="2">2nd</option>
               <option value="3">3rd</option> 
               <option value="4">4th</option>
               <option value="5">5th</option>
               <option value="6">6th</option>
               <option value="7">7th</option>
               <option value="8">8th</option>
               <option value="9">9th</option>
               <option value="10">10th</option>
               <option value="11">11th</option>
               <option value="12">12th</option>
               </select>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" required="required"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <br>
                <select name="Section" required="required">
               <option value="A">SECTION A</option>
               <option value="B">SECTION B</option>
               <option value="C">SECTION C</option>
               </select>
            </div>

            <div class="form-group">
                <label asp-for="ClassTeacher" class="control-label"></label>
                <input asp-for="ClassTeacher" class="form-control" required="required"/>
                <span asp-validation-for="ClassTeacher" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Principal" class="control-label"></label>
                <input asp-for="Principal" class="form-control" />
                <span asp-validation-for="Principal" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="BloodGroup" class="control-label"></label>
                <br>
                <select name="BloodGroup" required="required">
               <option value="A+">A+</option>
               <option value="B+">B+</option>
               <option value="AB+">AB+</option>
               <option value="A-">A-</option>
               <option value="B-">B-</option>
               <option value="AB-">AB-</option>
               <option value="O+">O+</option>
               <option value="O-">O-</option>
               </select>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="HouseDress" class="control-label"></label>
                <br>
               <select name="HouseDress" required="required">
               <option value="BLUE">BLUE</option>
               <option value="GREEN">GREEN</option>
               <option value="YELLOW">YELLOW</option>
               <option value="RED">RED</option>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <br><
            <div class="form-group">
                <label asp-for="Performance" class="control-label"></label>
                <input asp-for="Performance" class="form-control" />
                <span asp-validation-for="Performance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doa" class="control-label"></label>
                <input type="date" name="Doa">
            </div>

            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentFee" class="control-label"></label>
                <input asp-for="CurrentFee" class="form-control" />
                <span asp-validation-for="CurrentFee" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdharNo" class="control-label"></label>
                <input asp-for="AdharNo" class="form-control" />
                <span asp-validation-for="AdharNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD NEW RECORD" class="btn btn-primary" id="hit"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

    <script>
    $(document).ready(function(){
      $("#hit").click(function(){
        
      var url = $("#allform").attr("action");  //form merhod action
   
      //alert(url);
      
      var data = $("#allform").serialize();  //home//index

      //alert(data);

        $.ajax({                        //calling AJAX
          type="POST",     // type of action put or post...
          url=url,                 //link foe action perform...
          data= data         //all input fields.....


      });

         });
         return data;
    });
</script>

</body>
</html>
